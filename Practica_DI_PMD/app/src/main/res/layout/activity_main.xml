<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gifbackground"
        android:scaleType="centerCrop"
        />

    <Button
        android:id="@+id/Ejercicio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MemoryTron"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GuiaTop"/>


    <Button
        android:id="@+id/Ejercicio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CalculaTron"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ejercicio1"
        android:layout_marginTop="30dp"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/GuiaTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.35"
        android:orientation="horizontal"
        />



</androidx.constraintlayout.widget.ConstraintLayout>