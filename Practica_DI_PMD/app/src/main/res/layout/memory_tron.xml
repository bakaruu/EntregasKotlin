<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:id="@+id/vida1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/vida"
        app:layout_constraintBottom_toTopOf="@+id/seccionVidas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="40dp"

        />

    <TextView
        android:id="@+id/textoVida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/vida1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/seccionVidas"


        />




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/seccionVidas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.10"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/carta1"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"
        android:src="@drawable/trasera"
        app:layout_constraintBottom_toTopOf="@+id/carta5"
        app:layout_constraintEnd_toStartOf="@id/carta2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seccionVidas" />

    <ImageView
        android:id="@+id/carta2"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"
        android:src="@drawable/trasera"
        app:layout_constraintBottom_toTopOf="@+id/carta6"
        app:layout_constraintEnd_toStartOf="@id/carta3"

        app:layout_constraintStart_toEndOf="@id/carta1"
        app:layout_constraintTop_toBottomOf="@id/seccionVidas" />

    <ImageView
        android:id="@+id/carta3"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"
        android:src="@drawable/trasera"
        app:layout_constraintBottom_toTopOf="@+id/carta7"
        app:layout_constraintEnd_toStartOf="@id/carta4"

        app:layout_constraintStart_toEndOf="@id/carta2"
        app:layout_constraintTop_toBottomOf="@id/seccionVidas" />

    <ImageView
        android:id="@+id/carta4"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"
        android:src="@drawable/trasera"
        app:layout_constraintBottom_toTopOf="@+id/carta8"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@id/carta3"
        app:layout_constraintTop_toBottomOf="@id/seccionVidas" />


    <ImageView
        android:id="@+id/carta5"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"
        android:src="@drawable/trasera"
        app:layout_constraintBottom_toTopOf="@+id/carta9"
        app:layout_constraintEnd_toStartOf="@id/carta6"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carta1" />

    <ImageView
        android:id="@+id/carta6"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"
        android:src="@drawable/trasera"
        app:layout_constraintBottom_toTopOf="@+id/carta10"
        app:layout_constraintEnd_toStartOf="@id/carta7"

        app:layout_constraintStart_toEndOf="@id/carta5"
        app:layout_constraintTop_toBottomOf="@id/carta2"

        />

    <ImageView
        android:id="@+id/carta7"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"
        android:src="@drawable/trasera"
        app:layout_constraintBottom_toTopOf="@+id/carta11"
        app:layout_constraintEnd_toStartOf="@id/carta8"

        app:layout_constraintStart_toEndOf="@id/carta6"
        app:layout_constraintTop_toBottomOf="@id/carta3" />


    <ImageView
        android:id="@+id/carta8"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"
        android:src="@drawable/trasera"
        app:layout_constraintBottom_toTopOf="@+id/carta12"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toEndOf="@id/carta7"
        app:layout_constraintTop_toBottomOf="@id/carta4"

        />

    <ImageView
        android:id="@+id/carta9"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"

        android:src="@drawable/trasera"
        app:layout_constraintEnd_toStartOf="@id/carta10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/carta5"
        app:layout_constraintBottom_toTopOf="@+id/seccionReiniciar"/>

    <ImageView
        android:id="@+id/carta10"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"

        android:src="@drawable/trasera"
        app:layout_constraintEnd_toStartOf="@id/carta11"
        app:layout_constraintStart_toEndOf="@id/carta9"
        app:layout_constraintTop_toBottomOf="@id/carta6"
        app:layout_constraintBottom_toTopOf="@+id/seccionReiniciar"/>

    <ImageView
        android:id="@+id/carta11"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"
        android:src="@drawable/trasera"
        app:layout_constraintEnd_toStartOf="@id/carta12"
        app:layout_constraintStart_toEndOf="@id/carta10"
        app:layout_constraintTop_toBottomOf="@id/carta7"
        app:layout_constraintBottom_toTopOf="@+id/seccionReiniciar"/>

    <ImageView
        android:id="@+id/carta12"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:onClick="jugar"

        android:src="@drawable/trasera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/carta11"
        app:layout_constraintTop_toBottomOf="@id/carta8"
        app:layout_constraintBottom_toTopOf="@+id/seccionReiniciar"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/seccionReiniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_percent="0.86"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/Reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar Juego"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seccionReiniciar"

        />


</androidx.constraintlayout.widget.ConstraintLayout>