<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondochat"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/chat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/whatsapp"
                android:layout_gravity="start"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Peter"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doble_verificacion"
                android:layout_gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Tienes merca?"
            android:background="#2C449A"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/chat2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/chat1"
        android:layout_marginTop="50dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doble_verificacion"
                android:layout_gravity="start"
                android:layout_weight="1"/>



            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Porros"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/whatsapp"
                android:layout_gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Claro man, que quieres"
            android:background="#2C449A"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/chat3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/chat2"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/whatsapp"
                android:layout_gravity="start"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Peter"
                android:textColor="@color/white"
                android:textSize="30dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="10" />


            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/doble_verificacion"
                android:layout_gravity="end"
                android:layout_weight="1"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Porros?"
            android:background="#2C449A"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>